<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kosa.myproject.mapper.CustomerMapper">
<!-- 고객 등록 -->
    <insert id="register" parameterType="org.kosa.myproject.domain.Customer" useGeneratedKeys="true" keyProperty="customerId">
        INSERT INTO customer (name, email) 
        VALUES (#{name}, #{email})
    </insert>
    
    <!-- 고객 ID로 조회 -->
    <select id="findById" parameterType="Long" resultType="org.kosa.myproject.domain.Customer">
        SELECT customer_id as customerId,
               name,
               email
        FROM customer 
        WHERE customer_id = #{customerId}
    </select>
</mapper>